<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ProgressBar
        android:id="@+id/kii_tool_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        />
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/kii_tool_progress"
        android:layout_alignTop="@+id/kii_tool_progress"
        android:layout_alignBottom="@+id/kii_tool_progress"
        android:gravity="left|center_vertical"
        android:text="@string/kii_tool_login" 
        />
    

</RelativeLayout>